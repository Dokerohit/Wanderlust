<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="mb-3">Listing Details</h3>
  </div>

  <div class="card col-6 offset-2">
    <img 
    src="<%= listing.image?.url || 'https://images.pexels.com/photos/27054239/pexels-photo-27054239.jpeg?auto=compress&cs=tinysrgb&w=800' %>" 
    class="card-img-top show-img" 
      alt="listing_image" 
      style="height: 25rem; object-fit: cover;"
    >

    <div class="card-body">
      <h5 class="card-title"><b><%= listing.title %></b></h5>
      <p class="card-text"><%= listing.description %></p>
      
      <ul class="list-unstyled">
        <li><b>Price:</b> â‚¹<%= listing.price.toLocaleString("en-IN") %></li>
        <li><b>Location:</b> <%= listing.location %></li>
        <li><b>Country:</b> <%= listing.country %></li>
      </ul>
    </div>

    <div class="btns d-flex justify-content-between p-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
</div>
